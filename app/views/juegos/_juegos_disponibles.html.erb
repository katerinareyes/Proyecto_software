<%= turbo_frame_tag "juegos_disponibles" do %>

<section class="general" id="general-index">
        <div class="general-1" id="general-1-index">
            <h2>Juegos Disponibles</h2>
            <p>
                Acá veras cada uno de los juegos publicados por todos los usuarios de CambiaLibros.
                Podrás ver sus caracteristicas y descripciones e interactuar con ellos si
                así lo deseas. También dispones de un buscardor para hacer más fácil tu busqueda!
            </p>
      
        </div>
        <div class="general-3" id="general-3-index">

            <div class= div3>
                <%= form_with url: juegos_search_path, method: :get , class: "formulario-busqueda" do |form|%>
                <%= form.search_field :nombre, placeholder: "Buscar por nombre", value: params[:nombre] ,id:"titulo"%>
                <div class= div4>
                <%= form.radio_button :estado, "Nuevo" , value: params[:estado]%>
                <%= form.label :estado_nuevo, "Nuevo"%>
                </div>
                <div class= div4>
                <%= form.radio_button :estado, "Usado" , value: params[:estado]%>
                <%= form.label :estado_usado, "Usado"%>
                </div>
                <%= form.button "Buscar", class: 'btn inputs-secundary' %>
                <% end %>
            </div>
        </div>
    </section>


<section class="grid-layout">
            <% juegos_disponibles.each do |juego_disponible| %>
            <div class="caja-index">
                <div class="subcaja c1">
                    <%= cl_image_tag juego_disponible.imagen.pathmap%>
                </div>
                <div class="subcaja">Nombre</div>
                <div class="subcaja"><%= juego_disponible.nombre %></div>
                <div class="subcaja">Tipo</div>
                <div class="subcaja"><%= juego_disponible.tipo %></div>
                <div class="subcaja">Estado</div>
                <div class="subcaja"><%= juego_disponible.estado %></div>
                <div class="subcaja">N° Jugadores</div>
                <div class="subcaja"><%= juego_disponible.cant_jugadores %></div>
                <div class="subcaja">Descripción</div>
                <div class="subcaja"><%= juego_disponible.descripcion %></div>
                <div class="subcaja">Te interesa?</div>
                <div class="subcaja"><%= link_to "Ver Juego", juegos_mostrar_path(juego_disponible, juego_disponible.user.id), data:{turbo:"false"}, class: 'btn-2'%></div>

            </div>    
            <% end %>
</section>
<% end %>
