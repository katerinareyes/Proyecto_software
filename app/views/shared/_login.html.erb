    <div class="login container" id="l">
      <ul>
        <% if user_signed_in? %>
          <li><p>Logged in as <%= current_user.nombre %></p></li>
          <li><p><%= button_to "Edit", edit_user_registration_path %></p></li>
          <li><p><%= button_to "Sign out", destroy_user_session_path, method: :delete %></p></li>
        
        <% else %>
          <li><%= button_to "Sign in", new_user_session_path %></li>
          <li><%= button_to "Sign up", new_user_registration_path %></li>
        <% end %>
      
        <% if flash[:notice] %>
          <li><p class="notice"><%= flash[:notice] %></p></li>
        <% end %>

        <% if flash[:alert] %>
          <li><p class="alert"><%= flash[:alert] %></p></li>
        <% end %>

      </ul>
    </div>