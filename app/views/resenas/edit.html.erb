<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CambiaLibros</title>
</head>
<body>
    <main>
        <%= render 'shared/header-chico' %>
        <section>
            <section class="seccion-subtitulo">
            <h2 id="subtitulo">Editar Reseña</h2>
            </section>
            <section class="seccion-subtitulo">
            <%= form_with model: @resena, url: resenas_update_path(@resena.id) do |form| %>
                <div>
                <%= form.label :Calificación %><br>
                <%= form.number_field :calificacion, in: 1..5%>
                <% @resena.errors.full_messages_for(:calificacion).each do |message| %>
                <div><%= message %></div>
                <% end %>
            </div>   

            <div>
                <%= form.label :Comentario %><br>
                <%= form.text_area :comentario %>
                <% @resena.errors.full_messages_for(:comentario).each do |message| %>
                <div><%= message %></div>
                <% end %>
            </div>
            <%=form.hidden_field :usuario_creador_id, value: current_user.id%>
            <%=form.hidden_field :usuario_receptor_id, value:@resena.usuario_receptor_id%>
            <%= form.submit "Actualizar" %>
            <% end %>
            </section>
        </section>
       
    </main>
    <footer>
       
    </footer>
</body>
</html>